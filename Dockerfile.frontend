# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Copy dependency files from root
COPY package*.json ./

RUN npm install

# Copy entire project
COPY . .

# Build Next.js app
RUN npm run build

# Production stage
FROM node:20-alpine

WORKDIR /app

# Copy built files from builder
COPY --from=builder /app ./

EXPOSE 3000

CMD ["npm", "start"]
