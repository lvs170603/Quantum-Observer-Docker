# Backend (FastAPI + Qiskit)
FROM python:3.11-slim

# Workdir
WORKDIR /app

# Copy backend files
COPY backend/ /app

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Expose FastAPI port
EXPOSE 8000

# Run server
CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8000"]
